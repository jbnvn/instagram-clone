  <div class="post-container">

    <% @posts.each do |p| %>

      <div class="post">

        <%= link_to user_path(p) do %>
          <div class="post-header">
            <%= cl_image_tag p.user.photo.key, height: 500, width: 500, crop: :thumb, gravity: :face, class: "avatar"%>
            <p class="post-author"><%= p.user.username %></p>
          </div>
        <% end %>

        <%#= link_to post_path(p) do %>
        <div class="post-img">
          <%= cl_image_tag p.photo.key, height: 400, width: 400, crop: :fill %>
        </div>

        <div class="post-info">
          <span class="post-header-author"><%= p.user.username %></span>
          <span class="post-description"> <%= p.description.truncate(120, :separator => ' ') %></span>
          <p class="post-timestamp"> About <%= distance_of_time_in_words(p.created_at, Date.today)%> ago</p>
        </div>
        <%# end %>
      </div>

    <% end %>

  </div>

